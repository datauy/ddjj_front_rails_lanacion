<%
	datos_cargados_por = [ "Directorio Legislativo por el Poder Legislativo" ]
%>
<style type="text/css">

</style>

<div class="cont_ddjj poder_<%= @ddjj.persona_cargo.cargo.poder_id %> gris">
	<% if @page %>
		<a href='<%= url_for :action => "index" %>' class="cont_flecha" title="volver" id="volver"><span class="spt btn_flecha back"> </span>VOLVER</a>
		<%= render "buscador_x_str"%>
	<% end %>
	<div class="header">
		<h2><span class="spt logo_poder">&nbsp;</span> <span id="log_txt">Poder <%= Cargo::PODER[@ddjj.persona_cargo.cargo.poder_id] %> <span class="detalle"></span></span>
		</h2>
	</div>
	<div class="row info">
		<div class="col_1">

			<div class="descripcion">
				<div class="cell_8">
				<!-- <img src="#" /> -->
				<!-- Link a al tag en la nacion.com.ar -->
			<%if @ddjj.persona_cargo.persona.tag_id%>
				<h3><a href="<%= @ddjj.persona_cargo.persona.get_tag_nacion %>" title="Ver notas relacionadas con: <%= @ddjj.persona_cargo.persona.nom_comp %>" target="_blanc"><%= @ddjj.persona_cargo.persona.nom_comp %></a></h3>
			<%else%>
				<h3><%= @ddjj.persona_cargo.persona.nom_comp %></h3>
			<%end%>

				<h4>DDJJ de <span><%= "#{@ddjj.ano} #{@ddjj.tipo_ddjj}" %></span><!-- <%= @ddjj.visitas ? content_tag(:span, "- #{@ddjj.visitas} visitas", :class=>"small") : ""%>  --></h4>
				<h5><%= "#{@ddjj.persona_cargo.cargo.cargo}" %></h5>
				<div style="color: #888989; margin: 5px 0 0; line-height: 1.3">
					<p><%= "#{@ddjj.persona_cargo.jurisdiccion.nombre if @ddjj.persona_cargo.jurisdiccion}" %></p>
					<% if @ddjj.persona_cargo.ingreso %>
						<% if @ddjj.persona_cargo.cargo.poder_id == 3 %>
						<!--<p>Ingreso al Poder judicial <%= @ddjj.persona_cargo.ingreso.strftime "%d/%m/%Y" %></p>-->
						<% else %>
						<!--<p>Ingreso a la función pública <%= @ddjj.persona_cargo.ingreso.strftime "%d/%m/%Y" %></p>-->
						<% end %>
					<% end %>
					<% if @ddjj.persona_cargo.persona.ficha_d_l && @ddjj.persona_cargo.persona.ficha_d_l != "" %>
						<a class="ficha_d_l" href="<%= @ddjj.persona_cargo.persona.ficha_d_l %>" title="Ver ficha de <%= @ddjj.persona_cargo.persona.nom_comp %> en Directorio Legislativo" target="_blanc">Ver ficha en Directorio Legislativo</a>
					<%end%>

				</div>
				</div>
				<div class="cell_4">
					<a href='<%= @ddjj.url%>' target="_blank" class="cont_flecha" title="volver" id="" style="/*position:absolute; top: 45px;right: 49px;*/"><span class="spt btn_flecha cloud"> </span>Ddjj original</a>
					<% if @ddjj.flag_presenta %>
					<%if  PERMITIR_EXPORTAR_DATA %>
						<ul id="descargas">
							<li class="cont_flecha" title="volver" id="" style="/*position:absolute; top: 0px;right: 20px;*/"><span class="spt btn_flecha down"> </span>Descargar datos
								<ul>
						<%if @ddjj.created_at < EXPORTAR_DATA.ago %>
									<li><a href="/ddjj/<%= @ddjj.flag_search %>.json" title="Descargar en formato JSON">JSON</a></li>
									<li><a href="/ddjj/<%= @ddjj.flag_search %>.xml" title="Descargar en formato XML">XML</a></li>
									<li><a href="/ddjj/<%= @ddjj.flag_search %>.csv" title="Descargar en formato CSV">CSV</a></li>
						<% else %>
									<li>Próximamente</li>
						<% end %>
								</ul>
							</li>
						</ul>
					<% end %>
					<% end %>

				</div>
			</div>
		</div>
	</div>
	<div class="row">
		<div class="col_1">
			<section class="ddjj">
				<h2 hidden>bienes declarados</h2>

				<%
				if @ddjj.flag_presenta == 0  # Si NO presenta DDJJ imprime la carta
				%>
				<% if @page %>
					<%= render partial: "no_presenta_ddjj" %>
				<% end %>

				<% else # si presenta DDJJ
				%>

				<p id="filtrar" hidden>&nbsp;</p>
				<%
					total_patrimonio = 0
					total_deudas = 0
				%>
				<% @ddjj.biens.each do | x |
						#total_patrimonio += x.valor_fiscal
						if x.tipo_bien_s.downcase!="deudas" && x.tipo_bien_s.downcase!="ingresos cargo" && x.tipo_bien_s.downcase!="ingresos otros" && x.tipo_bien_s.downcase!="ingresos ventas"
							total_patrimonio += x.valor_fiscal
						end
				    if x.tipo_bien_s.downcase=="deudas"
							total_deudas += x.valor_fiscal
						end
				   end
				   total_patrimonio = total_patrimonio - total_deudas
				 %>
				<h3 class="total_patrimonio">Total patrimonio: $<%= total_patrimonio.round.to_s.reverse.gsub(/...(?=.)/,'\&.').reverse %></h3>
				<article class="inmuebles">
					<h3><span>Bienes inmuebles</span></h3>
					<a class="ver menos" href="#">ver mas</a>
	<!-- 				<div style="overflow:hidden">


					</div> -->

						<%= render partial: "home/biens_icos", locals: {biens: map_bienes(@ddjj.biens, "bienes inmuebles"), currency: params[:currency] ? params[:currency] : false }	 %>

				</article>

				<article class="muebles">
					<h3><span>Bienes muebles</span></h3>
					<a class="ver menos" href="#">ver mas</a>
						<%= render partial: "home/biens_icos", locals: { biens: map_bienes(@ddjj.biens, "bienes muebles"), currency: params[:currency] ? params[:currency] : false } %>
				</article>
				<script id="table_tooltip" type="text/x-handlebars-template">
					{{! template para tooltip dinero }}
					<table>
						<thead>
							<tr>
                                <th class="desc">Descripción</th>
                                <th>Declarante</th>
                                <th>Obs.</th>
                                <th>Origen</th>
                                <th class="val">Valor</th>
                            </tr>
						</thead>
						<tbody>
							{{#each this}}
							<tr>
								<td class="desc">
									{{nombre_bien_s}}
									{{#if descripcion}}
										- {{descripcion}}
									{{/if}}
								</td>
								<td class="vinc">
									{{#if titular_dominio}}
										{{titular_dominio}}
									{{else}}
										{{vinculo}}
									{{/if}}
								</td>
								<td class="obs">
									{{#if obs}}
										{{obs}}
									{{/if}}
								<td class="obs">
									{{#if origen}}
										{{origen}}
									{{/if}}
								</td>

								<td class="val">
									{{#if valor_fiscal}}
										{{monedas.valor_fiscal}}{{formatNumber valor_fiscal}}
									{{/if}}
									</td>
							</tr>
							{{/each}}
						</tbody>
					</table>
				</script>
				<article class="dinero">
					<h3><span>Ahorros*</span></h3>
					<a class="ver menos" href="#">ver mas</a>
					<ul class="dineros">
					<%

					dinero =  []

					@ddjj.biens.select {|x| x.tipo_bien_s.downcase == "dinero ahorros".downcase } # toma todo el dinero
						.each do | b |
							Bien::TIPO_MONEDA.each_index do |i| # separa x moneda
								if b.m_valor_fiscal_id == i
									if dinero[i]
										dinero[i] << b
									else
										dinero[i] = Array.new
										dinero[i] << b
									end
								end
							end
						end

					# logger.debug dinero.to_yaml
					total_dineros = 0
					dinero.each_index {|i|
						tmp = 0
						if dinero[i]
							dinero[i].each_index {|j|
								if dinero[i][j].valor_fiscal
									tmp += dinero[i][j].valor_fiscal
									total_dineros += dinero[i][j].valor_fiscal
								end
							}
						%>
						<li data-flag="moneda"><span class="ico <%= dinero[i][0].css_moneda_class_name %>"><%= dinero[i][0].get_moneda "fiscal" %> </span><span class="text numero total"> <%= tmp.to_s %></span>
							<div class="data"><%= dinero[i].to_json %></div>
						</li>
						<%
						end
					}
					%>
					</ul>
					<table class='tabla'><tbody><tr><td class='first'><b>SUBTOTAL:</b></td><td class='second'><b><span class='numero'><%= total_dineros.to_s %></b></span><div class='data'></div></td></tr></tbody></table>
				</article>
				<p class="nota">* INCLUYE DINERO EN EFECTIVO, DEPÓSITOS BANCARIOS Y BONOS</p>

				<article class="ingresos">
					<h3><span>Ingresos por cargo (excluídos del total patrimonio)</span></h3>
					<a class="ver menos" href="#">ver mas</a>

					<table class="tabla">
			  			<thead>
							<tr>
							  <th class="first">Cargo</th>
							  <th class="second">Importe</th>
							</tr>
						</thead>
						<tbody>

						<%= render partial: "home/biens_table", locals: { biens: map_bienes(@ddjj.biens, "ingresos cargo", true), currency: params[:currency] ? params[:currency] : false } %>

						</tbody>
					</table>
				</article>

				<article class="ingresos_ventas">
					<h3><span>Ingresos por venta (excluídos del total patrimonio)</span></h3>
					<a class="ver menos" href="#">ver mas</a>

					<table class="tabla">
			  			<thead>
							<tr>
							  <th class="first">Ventas</th>
							  <th class="second">Importe</th>
							</tr>
						</thead>
						<tbody>

						<%= render partial: "home/biens_table", locals: { biens: map_bienes(@ddjj.biens, "ingresos ventas", true), currency: params[:currency] ? params[:currency] : false } %>

						</tbody>
					</table>
				</article>

				<article class="ingresos_otros">
					<h3><span>Otros ingresos (excluídos del total patrimonio)</span></h3>
					<a class="ver menos" href="#">ver mas</a>
					<table class="tabla">
			  			<thead>
							<tr>
							  <th class="first">Otros</th>
							  <th class="second">Importe</th>
							</tr>
						</thead>
						<tbody>

						<%= render partial: "home/biens_table", locals: { biens: map_bienes(@ddjj.biens, "ingresos otros", true), currency: params[:currency] ? params[:currency] : false } %>

						</tbody>
					</table>
				</article>

				<article class="sociedades">
					<h3><span>Sociedades</span></h3>
					<a class="ver menos" href="#">ver mas</a>
					<table class="tabla">
			  			<thead>
							<tr>
							  <th class="first">Sociedad</th>
							  <th class="second">Importe</th>
							</tr>
						</thead>
						<tbody>

						<%= render partial: "home/biens_table_agrupados", locals: { biens: map_bienes(@ddjj.biens, "sociedades"), currency: params[:currency] ? params[:currency] : false } %>

						</tbody>
					</table>
				</article>

				<article class="acreencias">
					<h3><span>Acreencias</span></h3>
					<a class="ver menos" href="#">ver mas</a>
					<table class="tabla">
			  			<thead>
							<tr>
							  <th class="first">Acreencia</th>
							  <th class="second">Importe</th>
							</tr>
						</thead>
						<tbody>

						<%= render partial: "home/biens_table", locals: { biens: map_bienes(@ddjj.biens, "acreencias", true), currency: params[:currency] ? params[:currency] : false } %>

						</tbody>
					</table>
				</article>

				<article class="titulos">
					<h3><span>Títulos y Fondos</span></h3>
					<a class="ver menos" href="#">ver mas</a>
					<table class="tabla">
			  			<thead>
							<tr>
							  <th class="first">Títulos y Fondos</th>
							  <th class="second">Importe</th>
							</tr>
						</thead>
						<tbody>

						<%= render partial: "home/biens_table", locals: { biens: map_bienes(@ddjj.biens, "títulos y fci", true), currency: params[:currency] ? params[:currency] : false } %>

						</tbody>
					</table>
				</article>

				<article class="deudas">
					<h3><span>Deudas</span></h3>
					<a class="ver menos" href="#">ver mas</a>
					<table class="tabla">
			  			<thead>
							<tr>
							  <th class="first">Deudas</th>
							  <th class="second">Importe</th>
							</tr>
						</thead>
						<tbody>

						<%= render partial: "home/biens_table", locals: { biens: map_bienes(@ddjj.biens, "deudas", true), currency: params[:currency] ? params[:currency] : false } %>

						</tbody>
					</table>
				</article>
				<h3 class="total_patrimonio">Total patrimonio: $<%= total_patrimonio.round.to_s.reverse.gsub(/...(?=.)/,'\&.').reverse %></h3>
<%end%>


<%if @ddjj.obs and not @ddjj.obs.blank? %>
				<article style="padding-top: 10px; color: #666; margin-top: 20px; border-color:#ccc">
					<div class="obs_ddjj" style="padding-bottom: 10px;">
						<% if @ddjj.obs =~ /({[a-z : \/\/ \. 0-9 \- \#]*})/
						url = $1
						%>

						<p>
							<span style="font-weight: bold">Observaciones:</span> <%= @ddjj.obs.gsub(url, "") %> <%= content_tag(:a, "Haga clic aquí para ver el documento.", :href=> url.gsub(/[\{\}]/,""), :target=> "_blank")%>
						</p>
						<% else %>
						<p>
							<span style="font-weight: bold">Observaciones:</span> <%= @ddjj.obs %>
						</p>
						<% end %>
					</div>
				</article>
<% end %>
			</section>
		</div>
		<%
		otras_ddjjs = @ddjj.otras_ddjjs
		%>
		<!-- <pre>
		<%= otras_ddjjs.to_yaml %>
		</pre>
		 -->
		<%
			if otras_ddjjs.length > 0
			# if false
		%>
		<div class="col_2">
			<div class="otras">
				<h3>OTRAS DDJJ <span class="persona">de <%= @ddjj.persona_cargo.persona.nom_comp %></span></h3>
				<ul class="mas_ddjjs">
				<% otras_ddjjs.each do | dj | %>
					<li><a href="<%= url_for :action => "get_ddjj", :id => dj.flag_search %>" title='<%= "DDJJ #{dj.ano} #{dj.tipo_ddjj}" %> <%= "(Presenta carta por DDJJ)" unless dj.flag_presenta %>'><span class="circ">&nbsp;</span>ddjj <%= dj.tipo_ddjj_short %>
						<% unless dj.flag_presenta %>
						<span class="pres_carta"></span>
						<% end %>
						</a></li>
				<% end %>
				</ul>
			</div>
		</div>
		<%	end %>
	</div>
	<% if @ddjj.flag_presenta%>
	<section id="referencias">
		<h3>Referencias</h4>
		<ul id="referencias_graficas" class="spt">
			<li>casa</li>
			<li>departamento</li>
			<li>local</li>
			<li>cochera</li>
			<li>campo, terreno</li>
			<li>camioneta</li>
			<li>auto</li>
			<li>moto</li>
			<li>embarcacion</li>
			<li>pesos</li>
			<li>dolares</li>
		</ul>
		<ul id="referencias_graficas_monedas" class="spt">
			<li>$</li>
			<li>u$d</li>
		</ul>
	</section>
	<div id="notas">
		<p><span>Nota: </span>Los íconos que aparecen con una línea divisoria indican que tiene 2 o más titulares; y los íconos que poseen una transparencia, que el funcionario declaró sólo un porcentaje de dicho bien.</p>
	</div>
	<%else%>
		<br />
	<%end%>
</div>

<script type="text/template" id="tabla_tooltip">

</script>


