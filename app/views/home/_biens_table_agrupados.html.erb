<% total = 0 %>
<% biens.each do | x | %>
  <%
  if ( x[0].get_moneda('fiscal') != 'us$' )
    total += convert_currency(x[0].valor_fiscal, x[0].get_moneda('fiscal'), 'us$')
  else
    total += x[0].valor_fiscal
  end
  %>
	<tr class="">
	<% if x[0].nombre_bien_s && x[0].descripcion	%>
		<td class="first"><%= x[0].nombre_bien_s %> <span><%= "- #{x[0].descripcion}"%></span></td>
	<% else	%>
		<td class="first"><%= x[0].nombre_bien_s && x[0].nombre_bien_s.downcase != "no especifica" ? x[0].nombre_bien_s : x[0].descripcion ? x[0].descripcion : x[0].entidad %></td>
	<% end	%>
		<td class="second">
	<% if x[1] %>
			2 o + titulares
	<% else %>
			<span class="moneda"><%= x[0].get_moneda "fiscal"%></span><span class="numero"><%= x[0].valor_fiscal %></span>
	<% end	%>
			<div class="data"><%= x.to_json %></div>
		</td>
	</tr>

<% end %>
<tr><td class="first"><b>SUBTOTAL:</b></td><td class="second"><b><span class="numero"><%= total %> USD</b></span><div class="data">Subtotal: <%= total %></div></td></tr>
